{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "mobileanalytics:PutEvents",
                "cognito-sync:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "lambda:InvokeFunction"
            ],
            "Resource": [
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthCreateUser",
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthVerifyUser",
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthLostUser",
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthLostPassword",
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthResetPassword",
                "arn:aws:lambda:us-east-1:367551854218:function:LambdAuthLogin"
            ]
        }
    ]
}
